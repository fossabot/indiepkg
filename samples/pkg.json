{
    "name": "my-package-name",
    "author": "my username or name",
    "description": "this is my awesome package description",
    "url": "https://github.com/username/repo.git",
    "branch": "my branch",
    "license": "license name",
    "bin": {
        "in_source": [
            "bin/my_file"
        ],
        "installed": [
            "my_file"
        ]
    },
    "commands": {
        "all": {
            "install": [
                "./configure",
                "make",
                "make install PATH=':(PATH):'"
            ],
            "uninstall": [
                "rm :(PATH):/bin/my_file"
            ],
            "update": [
                "rm :(PATH):/bin/my_file",
                "make",
                "make install PATH=:(PATH):"
            ]   
        },
        "linux": {
            "install": [
                "./configure",
                "make",
                "make install PATH=:(PATH):"
            ],
            "uninstall": [
                "rm :(PATH):/bin/my_file"
            ],
            "update": [
                "rm :(PATH):/bin/my_file",
                "make",
                "make install PATH=:(PATH):"
            ]   
        },
        "darwin": {
            "install": [
                "./configure",
                "gmake",
                "gmake install PATH=':(PATH):'"
            ],
            "uninstall": [
                "rm :(PATH):/bin/my_file"
            ],
            "update": [
                "rm :(PATH):/bin/my_file",
                "gmake",
                "gmake install PATH=:(PATH):"
            ]   
        }
    },
    "deps": {
        "all": [
            "hello-world"
        ],
        "linux": [
            "my-dep",
            "wow"
        ],
        "darwin": [
            "my-other-dep",
            "coreutils"
        ]
    },
    "config_paths": [
        ".config/my_pkg"
    ]
}