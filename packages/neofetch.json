{
    "name": "neofetch",
    "author": "dylanaraps",
    "description": "A command-line system information tool written in bash 3.2+",
    "url": "https://github.com/dylanaraps/neofetch.git",
    "commands": {
        "all": {
            "install": [
                "make install PATH=:(PATH):"
            ],
            "uninstall": [
                "make uninstall PATH=:(PATH):"
            ],
            "update": [
                "make uninstall PATH=:(PATH):",
                "make install PATH=:(PATH):"
            ]   
        }
    },
    "deps": {
        "all": [
            "bash"
        ]
    },
    "config_paths": [
        ".config/neofetch"
    ]
}