{
    "name": "btop",
    "author": "aristocratos",
    "description": "A monitor of resources.",
    "url": "https://github.com/aristocratos/btop.git",
    "license": "Apache-2.0",
    "bin": {
        "installed": [
            "btop"
        ]
    },
    "commands": {
        "all": {
            "install": [
                "make",
                "make install PREFIX=:(PATH):"
            ],
            "uninstall": [
                "make uninstall PREFIX=:(PATH):"
            ],
            "update": [
                "make uninstall PREFIX=:(PATH):",
                "make clean distclean",
                "make",
                "make install PREFIX=:(PATH):"
            ]
        },
        "darwin": {
            "install": [
                "gmake",
                "gmake install PREFIX=:(PATH):"
            ],
            "uninstall": [
                "gmake uninstall PREFIX=:(PATH):"
            ],
            "update": [
                "gmake uninstall PREFIX=:(PATH):",
                "gmake clean distclean",
                "gmake",
                "gmake install PREFIX=:(PATH):"
            ]
        }
    },
    "deps": {
        "all": [
            "gcc",
            "g++"
        ],
        "linux": [
            "make"
        ],
        "darwin": [
            "gmake"
        ]
    }
}