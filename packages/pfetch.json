{
    "name": "pfetch",
    "author": "dylanaraps",
    "description": "A pretty system information tool written in POSIX sh.",
    "url": "https://github.com/dylanaraps/pfetch.git",
    "commands": {
        "all": {
            "install": [
                "cp pfetch :(BIN):",
                "chmod +x :(BIN):/pfetch"
            ],
            "uninstall": [
                "rm :(BIN):/pfetch"
            ],
            "update": [
                "rm :(BIN):/pfetch",
                "cp pfetch :(BIN):",
                "chmod +x :(BIN):/pfetch"
            ]   
        }
    },
    "deps": {
        "all": [
            "sh"
        ]
    }
}