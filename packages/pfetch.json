{
    "name": "pfetch",
    "author": "dylanaraps",
    "description": "A pretty system information tool written in POSIX sh.",
    "url": "https://github.com/dylanaraps/pfetch.git",
    "commands": {
        "all": {
            "install": [
                "make install PREFIX=:(PATH):"
            ],
            "uninstall": [
                "make uninstall PREFIX=:(PATH):"
            ],
            "update": [
                "make uninstall PREFIX=:(PATH):",
                "make install PREFIX=:(PATH):"
            ]   
        }
    },
    "deps": {
        "all": [
            "sh"
        ]
    }
}